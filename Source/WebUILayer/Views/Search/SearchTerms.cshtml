@model List<SearchTermStatisticViewModel>

<h1>Statistik</h1>


<div class="formcontainer">
    @foreach (var searchStatisticTerm in Model)
    {
        <div class="form-group row">
            <div class="form-group col-md-4">
                Søgetekst: @searchStatisticTerm.SearchTerm
            </div>
        </div>

        @foreach (var letterSpec in searchStatisticTerm.LetterSpec)
        {
            <div class="form-group row">
                <div class="form-group col-md-4">
                    @letterSpec.Character
                </div>
                <div class="form-group col-md-4">
                    @letterSpec.CharacterCount
                </div>
            </div>
        }

        @foreach (var digitSpec in searchStatisticTerm.DigitSpec)
        {
            <div class="form-group row">
                <div class="form-group col-md-4">
                    @digitSpec.Character
                </div>
                <div class="form-group col-md-4">
                    @digitSpec.CharacterCount
                </div>
            </div>
        }

        @foreach (var symbolSpec in searchStatisticTerm.SymbolSpec)
        {
            <div class="form-group row">
                <div class="form-group col-md-4">
                    @symbolSpec.Character
                </div>
                <div class="form-group col-md-4">
                    @symbolSpec.CharacterCount
                </div>
            </div>
        }
    }

</div>